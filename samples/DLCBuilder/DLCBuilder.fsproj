<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net5.0</TargetFramework>
    <RuntimeIdentifiers>win-x64;osx-x64</RuntimeIdentifiers>
    <SatelliteResourceLanguages>en</SatelliteResourceLanguages>
    <Platforms>x64</Platforms>
    <Authors>iminashi</Authors>
    <NeutralLanguage>en</NeutralLanguage>
    <Product>Rocksmith 2014 DLC Builder</Product>
    <Copyright>Copyright © 2020</Copyright>
    <ApplicationIcon>Assets\icon.ico</ApplicationIcon>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Debug'">
    <DefineConstants>DEBUG;TRACE</DefineConstants>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Release'">
    <PlatformTarget>x64</PlatformTarget>
    <DebugType>none</DebugType>
    <DebugSymbols>false</DebugSymbols>
  </PropertyGroup>

  <ItemGroup>
    <AvaloniaResource Include="Assets\coverart_placeholder.png" />
    <EmbeddedResource Include="Assets\icon.ico" />
    <EmbeddedResource Include="i18n\fi.json" />
    <EmbeddedResource Include="i18n\en.json" />
    <Page Include="Styles.xaml">
      <Generator>MSBuild:Compile</Generator>
    </Page>
    <AvaloniaResource Include="**\*.xaml" />
    <Compile Include="Utils.fs" />
    <Compile Include="Localization.fs" />
    <Compile Include="Media.fs" />
    <Compile Include="Dialogs.fs" />
    <Compile Include="Configuration.fs" />
    <Compile Include="Types.fs" />
    <Compile Include="EditFunctions.fs" />
    <Compile Include="TitledTextBox.fs" />
    <Compile Include="Templates.fs" />
    <Compile Include="Views\ProjectDetails.fs" />
    <Compile Include="Views\InstrumentalDetails.fs" />
    <Compile Include="Views\VocalsDetails.fs" />
    <Compile Include="Views\ToneDetails.fs" />
    <Compile Include="Views\SelectPreviewStart.fs" />
    <Compile Include="Views\ErrorMessage.fs" />
    <Compile Include="Views\SelectImportTones.fs" />
    <Compile Include="Views\IssueViewer.fs" />
    <Compile Include="Views\ConfigEditor.fs" />
    <Compile Include="Views\Main.fs" />
    <Compile Include="RecentFilesList.fs" />
    <Compile Include="BuildValidator.fs" />
    <Compile Include="Main.fs" />
    <Compile Include="Program.fs" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Avalonia.Desktop" Version="0.10.0" />
    <PackageReference Include="JaggerJo.Avalonia.FuncUI" Version="0.5.0-beta" />
    <PackageReference Include="JaggerJo.Avalonia.FuncUI.DSL" Version="0.5.0-beta" />
    <PackageReference Include="JaggerJo.Avalonia.FuncUI.Elmish" Version="0.5.0-beta" />
    <PackageReference Include="Live.Avalonia" Version="1.1.1" />
    <PackageReference Include="Pfim" Version="0.9.1" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Remove=".template.config\**" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\src\Rocksmith2014.Audio\Rocksmith2014.Audio.fsproj" />
    <ProjectReference Include="..\..\src\Rocksmith2014.DLCProject\Rocksmith2014.DLCProject.fsproj" />
    <ProjectReference Include="..\..\src\Rocksmith2014.XML.Processing\Rocksmith2014.XML.Processing.fsproj" />
    <ProjectReference Include="..\..\src\Rocksmith2014.XML\Rocksmith2014.XML.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Update="FSharp.Core" Version="5.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Watch Include="**\*.fs" />
    <Watch Include="**\*.xaml" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Assets\" />
  </ItemGroup>

  <ItemGroup>
    <Watch Remove="BuildValidator.fs" />
    <Watch Remove="Configuration.fs" />
    <Watch Remove="Dialogs.fs" />
    <Watch Remove="EditFunctions.fs" />
    <Watch Remove="Localization.fs" />
    <Watch Remove="Main.fs" />
    <Watch Remove="Media.fs" />
    <Watch Remove="RecentFilesList.fs" />
    <Watch Remove="Templates.fs" />
    <Watch Remove="TitledTextBox.fs" />
    <Watch Remove="Types.fs" />
    <Watch Remove="Utils.fs" />
    <Watch Remove="Views\ConfigEditor.fs" />
    <Watch Remove="Views\ErrorMessage.fs" />
    <Watch Remove="Views\InstrumentalDetails.fs" />
    <Watch Remove="Views\IssueViewer.fs" />
    <Watch Remove="Views\Main.fs" />
    <Watch Remove="Views\ProjectDetails.fs" />
    <Watch Remove="Views\SelectImportTones.fs" />
    <Watch Remove="Views\SelectPreviewStart.fs" />
    <Watch Remove="Views\ToneDetails.fs" />
    <Watch Remove="Views\VocalsDetails.fs" />
  </ItemGroup>
</Project>
